rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - merchants can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Transactions collection - merchants can only access their own transactions
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null && 
        (resource.data.merchantId == request.auth.uid || 
         request.auth.uid == resource.data.merchantId);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.merchantId;
    }
    
    // Merchants collection - Allow backend admin access and user self-access
    match /merchants/{merchantId} {
      // Allow users to read/write their own merchant profile
      allow read, write: if request.auth != null && request.auth.uid == merchantId;
      // Allow backend admin access (this bypasses rules anyway, but good for clarity)
      allow read, write: if true;
    }
    
    // Test collections for configuration verification
    match /_test/{document} {
      allow read, write: if true;
    }
    
    match /_config_test/{document} {
      allow read, write: if true;
    }
    
    // Orphaned callbacks collection - system access only
    match /orphaned_callbacks/{callbackId} {
      allow read, write: if true;
    }
  }
}